---
import Layout from "../../layouts/Layout.astro";
import Footer from "../../components/Footer.astro";
import SideNav from "../../components/sideNav.astro";

const refs = [
  "/assets/images/struck/holzbau/holz5.jpg",
  "/assets/images/struck/holzbau/holz6.jpg",
  "/assets/images/struck/holzbau/holz7.jpg",
  "/assets/images/struck/holzbau/holz3.jpg",
  "/assets/images/struck/holzbau/holz4.jpg",
];
---

<Layout
  title="Holzbau | Lauter & Struck"
  description="Entdecken Sie die exzellenten Dach-, Fassaden- und Abdichtungslösungen von Lauter & Struck in Holzminden. Vertrauen Sie auf unsere Expertise – wir lassen Sie nicht im Regen stehen! Kontaktieren Sie uns für individuelle Angebote."
>
  <!--Page Header Start-->
  <!--Page Header Start-->
  <section class="page-header">
    <div
      class="page-header-bg"
      style="background-image: url(/assets/images/struck/details/naegel_quer_big.jpg); background-position: 50%;"
    >
    </div>
    <div class="container">
      <div class="page-header__inner">
        <ul class="thm-breadcrumb list-unstyled">
          <li><a href="/">Home</a></li>
          <li><span>/</span></li>
          <li><a href="/leistungen">Leistungen</a></li>
        </ul>
        <h2>Unsere Leistungen</h2>
      </div>
    </div>
  </section>
  <!--Page Header End-->

  <!--Service Details Start-->
  <section class="service-details">
    <div class="container">
      <div class="row" style="--bs-gutter-x:60px">
        <div class="col-xl-4 col-lg-5">
          <SideNav leistung="holzbau" />
        </div>
        <div class="col-xl-8 col-lg-7">
          <div class="service-details__right">
            <div class="service-details__img">
              <img src="/assets/images/struck/holzbau/holz1.jpg" alt="" />
              <div class="service-details__icon">
                <span class="icon-joist"></span>
              </div>
            </div>
            <div class="service-details__content">
              <h3 class="service-details__content-title">Holzbau</h3>
              <p class="service-details__text-1">
                Dachstuhl, Carport, Unterstellplatz mit unserem kompetenten
                Abbund-Partnerunternehmen ist alles möglich
              </p>
            </div>
          </div>
          <section class="project-one ref-section">
            <div class="project-one__top">
              <div class="container">
                <div class="section-title text-center">
                  <h3 class="section-title__title fs-2 text-start">
                    Referenzen
                  </h3>
                </div>
              </div>
            </div>
            <div class="project-one__bottom">
              <div class="project-one__bottom-wrapper">
                <div
                  class="ref-one__carousel owl-carousel owl-theme thm-owl__carousel"
                >
                  {
                    refs.map((ref) => (
                      <div class="item">
                        <div class="project-one__single">
                          <div class="project-one__img-box">
                            <div class="project-one__img">
                              <img src={ref} alt="" />
                            </div>
                            <div class="project-one__link">
                              <a class="img-popup" href={ref}>
                                <i class="fa fa-search-plus" />
                              </a>
                            </div>
                          </div>
                        </div>
                      </div>
                    ))
                  }
                  <!--Project One Single End-->
                </div>
              </div>
            </div>
          </section>
        </div>
      </div>
    </div>
    <!--Service Details End-->
    <Footer />
  </section>
</Layout>
