---
import Layout from "../../layouts/Layout.astro";
import Footer from "../../components/Footer.astro";
import SideNav from "../../components/sideNav.astro";
---

<Layout title="Dachdeckermeister | Struck">
  <!--Page Header Start-->
  <!--Page Header Start-->
  <section class="page-header">
    <div
      class="page-header-bg"
      style="background-image: url(/assets/images/struck/dach/dach13.jpg); background-position: 50%;"
    >
    </div>
    <div class="container">
      <div class="page-header__inner">
        <ul class="thm-breadcrumb list-unstyled">
          <li><a href="/">Home</a></li>
          <li><span>/</span></li>
          <li><a href="/leistungen">Leistungen</a></li>
        </ul>
        <h2>Unsere Leistungen</h2>
      </div>
    </div>
  </section>
  <!--Page Header End-->

  <!--Service Details Start-->
  <section class="service-details">
    <div class="container">
      <div class="row" style="--bs-gutter-x:60px">
        <div class="col-xl-4 col-lg-5">
          <SideNav leistung="klempnerarbeiten" />
        </div>
        <div class="col-xl-8 col-lg-7">
          <div class="service-details__right">
            <div class="service-details__img">
              <img src="/assets/images/struck/dach/dach1.jpg" alt="" />
              <div class="service-details__icon">
                <span class="icon-joist"></span>
              </div>
            </div>
            <div class="service-details__content">
              <h3 class="service-details__content-title">Klempnerarbeiten</h3>
              <p class="service-details__text-1">
                Ziegel-, Schiefer-, oder Stehfalzeindeckung mit der dazu
                passenden, energiesparenden Wärmedämmung. Oder auch eine
                selbsttragenden Trapez- oder Isopaneleindeckung, wir finden
                gemeinsam die passende Lösung für Sie.
              </p>
              <div class="service-details__benefits-single">
                <div class="service-details__benefits-content">
                  <p class="service-details__text-2">Steildach:</p>
                  <ul class="list-unstyled service-details__benefits-points">
                    <li>
                      <div class="icon">
                        <i class="fa fa-arrow-right"></i>
                      </div>
                      <div class="text">
                        <p>Wärmeisolierung</p>
                      </div>
                    </li>
                    <li>
                      <div class="icon">
                        <i class="fa fa-arrow-right"></i>
                      </div>
                      <div class="text">
                        <p>Ziegel-& Schiefereindeckungen</p>
                      </div>
                    </li>
                    <li>
                      <div class="icon">
                        <i class="fa fa-arrow-right"></i>
                      </div>
                      <div class="text">
                        <p>Stehfalzeindeckungen</p>
                      </div>
                    </li>
                    <li>
                      <div class="icon">
                        <i class="fa fa-arrow-right"></i>
                      </div>
                      <div class="text">
                        <p>selbsttragenden Trapez- oder Isopaneleindeckunge</p>
                      </div>
                    </li>
                  </ul>
                </div>
              </div>
              <div class="service-details__benefits-single">
                <div class="service-details__benefits-content">
                  <p class="service-details__text-2">Flachdach:</p>
                  <ul class="list-unstyled service-details__benefits-points">
                    <li>
                      <div class="icon">
                        <i class="fa fa-arrow-right"></i>
                      </div>
                      <div class="text">
                        <p>Abdichten mit bituminösen Abdichtungsbahnen</p>
                      </div>
                    </li>
                    <li>
                      <div class="icon">
                        <i class="fa fa-arrow-right"></i>
                      </div>
                      <div class="text">
                        <p>hochpolymeren Abdichtungsbahnen</p>
                      </div>
                    </li>
                    <li>
                      <div class="icon">
                        <i class="fa fa-arrow-right"></i>
                      </div>
                      <div class="text">
                        <p>Gründachaufbau</p>
                      </div>
                    </li>
                    <li>
                      <div class="icon">
                        <i class="fa fa-arrow-right"></i>
                      </div>
                      <div class="text">
                        <p>selbsttragenden Trapez- oder Isopaneleindeckunge</p>
                      </div>
                    </li>
                  </ul>
                </div>
              </div>
              <div class="service-details__points-box">
                <ul class="list-unstyled service-details__points">
                  <li>
                    <div class="service-details__points-icon">
                      <span class="icon-roof"></span>
                    </div>
                    <div class="service-details__points-content">
                      <p>
                        Vom privaten Garagendach bis hin zu gewerblichen Hallen
                        bieten wir einen umfassenden Service.
                      </p>
                    </div>
                  </li>
                </ul>
              </div>
              <div class="service-details__benefits">
                <div class="row">
                  <div class="col-xl-12">
                    <div class="service-details__benefits-content">
                      <h3 class="service-details__benefits-title">
                        Referenzen
                      </h3>
                    </div>
                  </div>
                </div>
                <div class="row">
                  <div class="col-xl-6">
                    <div class="service-details__benefits-single">
                      <div class="service-details__benefits-img">
                        <img
                          src="/assets/images/struck/dach/dach13.jpg"
                          alt=""
                        />
                      </div>
                    </div>
                  </div>
                  <div class="col-xl-6">
                    <div class="service-details__benefits-single">
                      <div class="service-details__benefits-img">
                        <img
                          src="/assets/images/struck/dach/dach15.jpg"
                          alt=""
                        />
                      </div>
                    </div>
                  </div>
                </div>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
    <!--Service Details End-->
    <Footer />
  </section>
</Layout>
