---
import Layout from "../../layouts/Layout.astro";
import Footer from "../../components/Footer.astro";
import SideNav from "../../components/sideNav.astro";

const refs = [
  "/assets/images/struck/dachfenster/fenster1.jpg",
  "/assets/images/struck/dachfenster/fenster3.jpg",
  "/assets/images/struck/dachfenster/fenster4.jpg",
  "/assets/images/struck/dachfenster/fenster5.jpg",
  "/assets/images/struck/dachfenster/fenster6.jpg",
  "/assets/images/struck/dachfenster/fenster7.jpg",
];
---

<Layout
  title="Dachfenster | Lauter & Struck"
  description="Entdecken Sie die exzellenten Dach-, Fassaden- und Abdichtungslösungen von Lauter & Struck in Holzminden. Vertrauen Sie auf unsere Expertise – wir lassen Sie nicht im Regen stehen! Kontaktieren Sie uns für individuelle Angebote."
>
  <!--Page Header Start-->
  <!--Page Header Start-->
  <section class="page-header">
    <div
      class="page-header-bg"
      style="background-image: url(/assets/images/struck/details/naegel_quer_big.jpg); background-position: 50%;"
    >
    </div>
    <div class="container">
      <div class="page-header__inner">
        <ul class="thm-breadcrumb list-unstyled">
          <li><a href="/">Home</a></li>
          <li><span>/</span></li>
          <li><a href="/leistungen">Leistungen</a></li>
        </ul>
        <h2>Unsere Leistungen</h2>
      </div>
    </div>
  </section>
  <!--Page Header End-->

  <!--Service Details Start-->
  <section class="service-details">
    <div class="container">
      <div class="row" style="--bs-gutter-x:60px">
        <div class="col-xl-4 col-lg-5">
          <SideNav leistung="dachfenster" />
        </div>
        <div class="col-xl-8 col-lg-7">
          <div class="service-details__right">
            <div class="service-details__img">
              <img
                src="/assets/images/struck/dachfenster/fenster2.jpg"
                alt=""
              />
              <div class="service-details__icon">
                <span class="icon-joist"></span>
              </div>
            </div>
            <div class="service-details__content">
              <h3 class="service-details__content-title">
                Dachfenstereinbau / -austausch
              </h3>
              <p class="service-details__text-1">
                Tageslicht durch den Einbau verschiedenster Dachfenster bzw.
                Lichtlösungen mit diversem Zubehör
              </p>
              <div class="service-details__benefits-single">
                <div class="service-details__benefits-content">
                  <div class="row">
                    <div class="col-xl-8 d-flex flex-column">
                      <p class="service-details__text-2">Auf den Punkt:</p>
                      <ul
                        class="list-unstyled service-details__benefits-points"
                      >
                        <li>
                          <div class="icon">
                            <i class="fa fa-arrow-right"></i>
                          </div>
                          <div class="text">
                            <p>Einbau oder Austausch</p>
                          </div>
                        </li>
                        <li>
                          <div class="icon">
                            <i class="fa fa-arrow-right"></i>
                          </div>
                          <div class="text">
                            <p>
                              Tageslicht durch verschiedenste Dachfenster bzw.
                              Lichtlösungen
                            </p>
                          </div>
                        </li>
                        <li>
                          <div class="icon">
                            <i class="fa fa-arrow-right"></i>
                          </div>
                          <div class="text">
                            <p>
                              Sonnen- bzw. Hitzeschutz durch passendes Zubehör
                            </p>
                          </div>
                        </li>
                      </ul>
                    </div>
                    <div
                      class="col-xl-3 align-content-centerOFF justify-content-center f-flex brand-img"
                    >
                      <img
                        src="/assets/images/struck/brands/velux.svg"
                        alt="Velux"
                      />
                    </div>
                  </div>
                </div>
              </div>
              <div class="service-details__points-box">
                <ul class="list-unstyled service-details__points">
                  <li>
                    <div class="service-details__points-icon">
                      <span class="icon-joist"></span>
                    </div>
                    <div class="service-details__points-content">
                      <p>Hier geht es zum Velux-Dachfenster-Konfigurator:</p>
                      <a
                        style="color: var(--roofsie-base);"
                        class="fs-4 text-decoration-underline"
                        target="_blank"
                        href="/velux"
                      >
                        Dachfenster-Konfigurator</a
                      >
                    </div>
                  </li>
                </ul>
              </div>
              <div class="service-details__benefits">
                <div class="row">
                  <div class="col-xl-12">
                    <div class="service-details__benefits-content">
                      <h3 class="service-details__benefits-title">
                        Referenzen
                      </h3>
                    </div>
                  </div>
                </div>
                <div class="project-one__bottom">
                  <div class="project-one__bottom-wrapper">
                    <div
                      class="ref-one__carousel owl-carousel owl-theme thm-owl__carousel"
                    >
                      {
                        refs.map((ref) => (
                          <div class="item">
                            <div class="project-one__single">
                              <div class="project-one__img-box">
                                <div class="project-one__img">
                                  <img src={ref} alt="" />
                                </div>
                                <div class="project-one__link">
                                  <a class="img-popup" href={ref}>
                                    <i class="fa fa-search-plus" />
                                  </a>
                                </div>
                              </div>
                            </div>
                          </div>
                        ))
                      }
                      <!--Project One Single End-->
                    </div>
                  </div>
                </div>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
    <!--Service Details End-->
    <Footer />
  </section>
</Layout>
