    {
      name: "Niklas Lauter",
      title: "Dachdecker- & Klempnermeister",
      image: "Lauter",
    },
    { name: "Thomas Struck", title: "Dachdeckermeister", image: "Struck" },
  ],
  baustelle: [
    { name: "Jendrik Kahl", title: "Dachdeckermeister", image: "Jungs8" },
    { name: "Leonard Saum", title: "Dachdecker", image: "Jungs1" },
    { name: "Vahid Karimi", title: "Dachdecker", image: "Jungs2" },
    { name: "Habib Babaqoul", title: "Dachdecker", image: "Jungs6" },
    { name: "Hubert Oppermann", title: "Dachdecker", image: "Jungs9" },
    { name: "Erik Merkl", title: "Dachdecker", image: "Jungs14" },
    { name: "Kazem Adeli", title: "Dachdecker", image: "Jungs12" },
    { name: "Bakhir Amirov", title: "Dachdecker", image: "Jungs7" },
    {
      name: "Luca-Maximillian Schallenberg",
      title: "Dachdecker",
      image: "Jungs4",
    },
    { name: "Max Odendahl", title: "Azubi", image: "Jungs10" },
    { name: "Nick Rothmann", title: "Azubi", image: "Jungs11" },
    { name: "Vincent Happe", title: "Azubi", image: "Jungs5" },
    { name: "Till Wickert", title: "Azubi", image: "Jungs15" },
    { name: "Wolfgang Gebler", title: "Lagerist", image: "Jungs13" },
  ],
  buero: [
    {
      name: "Kim Sophie Kück",
      title: "Kauffrau für Büromanagm./Ausbilderin",
      image: "buro1",
    },
    {
      name: "Sylvia Potthoff",
      title: "Kauffrau für Büromanagement",
      image: "buro2",
    },
    {
      name: "Nicole Gebler",
      title: "Kauffrau für Büromanagement",
      image: "buro5",
    },
    {
      name: "Ute Bitterberg",
      title: "Kauffrau für Büromanagement",
      image: "buro3",
    },
    { name: "Luca-Rene Seer", title: "Azubi", image: "buro4" },
  ],
